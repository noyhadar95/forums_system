<Window x:Class="ForumsSystemClient.PresentationLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForumsSystemClient.PresentationLayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="750" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListView x:Name="forumsListView" HorizontalAlignment="Left" Height="285" Margin="180,102,0,0" VerticalAlignment="Top" Width="446" PreviewMouseLeftButtonUp="forumsListView_PreviewMouseLeftButtonUp">


        </ListView>
        <Label x:Name="chooseForumLbl" Content="choose a forum to enter" HorizontalAlignment="Left" Margin="180,63,0,0" VerticalAlignment="Top" Width="146"/>
        <Button x:Name="superAdminLoginBtn" Content="Super Admin Login" HorizontalAlignment="Left" Margin="22,102,0,0" VerticalAlignment="Top" Width="115"  Height="30" Click="superAdminLoginBtn_Click"/>
        <Label x:Name="welcomeLbl" Content="Welcome to TimTim Forums system" HorizontalAlignment="Left" Margin="22,22,0,0" VerticalAlignment="Top" FontSize="16"/>
    </Grid>
</Window>
